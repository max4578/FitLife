<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:jsp="http://java.sun.com/xml/ns/javaee/jsp" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" version="3.0">
  <display-name>FitLife</display-name>
  <welcome-file-list>
    <welcome-file>Accueil.jsp</welcome-file>
    <welcome-file>Journee.jsp</welcome-file>
    <welcome-file>MesJournee.jsp</welcome-file>
    <welcome-file>Seances.jsp</welcome-file>
    <welcome-file>Profil.jsp</welcome-file>
    <welcome-file>Compte.jsp</welcome-file>
  </welcome-file-list>

  <servlet>
    <servlet-name>ServletAccueil</servlet-name>
    <servlet-class>controller.ServletAccueil</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ServletAccueil</servlet-name>
    <url-pattern>/</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>C_Journee</servlet-name>
    <servlet-class>controller.C_Journee</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>C_Journee</servlet-name>
    <url-pattern>/Journee</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>C_MesJournees</servlet-name>
    <servlet-class>controller.C_MesJournees</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>C_MesJournees</servlet-name>
    <url-pattern>/MesJournees</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>C_Seance</servlet-name>
    <servlet-class>controller.C_Seance</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>C_Seance</servlet-name>
    <url-pattern>/Seances</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>C_Profil</servlet-name>
    <servlet-class>controller.C_Profil</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>C_Profil</servlet-name>
    <url-pattern>/Profil</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>C_Compte</servlet-name>
    <servlet-class>controller.C_Compte</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>C_Compte</servlet-name>
    <url-pattern>/Compte</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>ServletConnexion</servlet-name>
    <servlet-class>utilisateur.ServletConnexion</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ServletConnexion</servlet-name>
    <url-pattern>/Connexion</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>Inscription</servlet-name>
    <servlet-class>utilisateur.ServletInscription</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Inscription</servlet-name>
    <url-pattern>/Inscription</url-pattern>
  </servlet-mapping>
  
	<jsp-config>
    <jsp-property-group>
      <url-pattern>*.jsp</url-pattern>
      <include-prelude>/taglibs.jsp</include-prelude>
    </jsp-property-group>
  </jsp-config>
  
  <error-page>
    <exception-type>java.sql.SQLException</exception-type>
    <location>/Error\\ErrorDB.jsp</location>
  </error-page>
  <servlet>
    <servlet-name>ServletConnDB</servlet-name>
    <servlet-class>servlet.main.ServletConnDB</servlet-class>
    <init-param>
      <param-name>urlErreur</param-name>
      <param-value>/Error\\ErrorDB.jsp</param-value>
    </init-param>
  </servlet>
  <servlet-mapping>
    <servlet-name>ServletConnDB</servlet-name>
    <url-pattern>/Index</url-pattern>
  </servlet-mapping>
</web-app>